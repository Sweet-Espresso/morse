<body>

  <header>
        <div class="msgs bg-danger" id="error">Ola</div>
        <div class="msgs bg-success" id="success">Ola</div>
        <div class="logo">
            <div class="divlogo">
              <a href="/">Morse</a>
            </div>
        </div>
        <div class="conta">
          <div class="drop">
            <form id="drop-form">
              <div class="header-form"> <button type="button" class="btn btn-danger" onclick="down()"><i class="fa fa-times-circle"></i></button> </div>
              <div class="form-row">
                <div class="login w-85">
                  <label for="validationServer01">Usuário</label>
                  <input type="text" maxlength="25" onkeyup="validation('usuario')" class="form-control" id="usuario-inp" placeholder="Usuário" value="" required>
                  <div id="usuario-inp-feedback" class="">
                  </div>
                </div>
                <div class="login w-85">
                  <label for="validationServer03">Senha</label>
                  <input type="text" maxlength="25" onkeyup="validation('senha')" class="form-control" id="senha-inp" placeholder="Senha" required>
                  <div id="senha-inp-feedback" class="">
                  </div>
                </div>
                <div class="cad w-85">
                  <label for="validationServer03">Repetir senha</label>
                  <input type="text" class="form-control" onkeyup="validation('validation-senha')" id="validation-senha-inp" placeholder="Senha" required>
                  <div id="validation-senha-inp-feedback" class="">
                  </div>
                </div>
              </div>
              <button class="btn-login-or-cad btn btn-primary m-10" type="button" onclick="signinOrCad()">Enviar</button>
              <div class="mb-2 w-75 m-10">
                  <a class="a-login-or-cad" onclick="metodoCadOrLogin()" id="cad-button">Criar Conta</a>
              </div>
            </form>
          </div>
            <div class="usuario">
              <div id="usuario-img"></div>
            </div>
              <button class="sair" id="login" onclick="signOut()">Log out
            </button>
            <button class="entrar" onclick="cadOrLogin('login')">Log in</button>
            <button class="criar" onclick="cadOrLogin('cad')">Sign up</button>
        </div>
    </header>

  <div id="wrapper">
  {{{body}}}
